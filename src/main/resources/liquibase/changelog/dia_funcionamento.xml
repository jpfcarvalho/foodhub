<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="joao.carvalho" id="DIA_FUNCIONAMENTO">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN"
                       onFailMessage="A tabela DIA_FUNCIONAMENTO já existe.">
            <not>
                <tableExists tableName="DIA_FUNCIONAMENTO"/>
            </not>
        </preConditions>
        <createTable tableName="DIA_FUNCIONAMENTO">
            <column name="ID" type="NUMERIC(10,0)">
                <constraints nullable="false" primaryKey="true"
                             primaryKeyName="PK_DIA_FUNCIONAMENTO"/>
            </column>
            <column name="DIA_SEMANA" type="NUMERIC(10,0)">
                <constraints nullable="false"/>
            </column>
            <column name="ID_RESTAURANTE" type="NUMERIC(10,0)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet author="joao.carvalho" id="CREATE_S_DIA_FUNCIONAMENTO">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN"
                       onFailMessage="A sequence S_DIA_FUNCIONAMENTO já existe">
            <not>
                <sequenceExists sequenceName="S_DIA_FUNCIONAMENTO"/>
            </not>
        </preConditions>
        <createSequence incrementBy="1"
                        sequenceName="S_DIA_FUNCIONAMENTO" startValue="1"/>
    </changeSet>
    
    <changeSet author="joao.carvalho" id="FK_DIA_FUNCIONAMENTO_RESTAURANTE">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN"
                       onFailMessage="A constraint FK_DIA_FUNCIONAMENTO_RESTAURANTE já existe">
            <not>
                <foreignKeyConstraintExists
                        foreignKeyName="FK_DIA_FUNCIONAMENTO_RESTAURANTE"
                        foreignKeyTableName="DIA_FUNCIONAMENTO"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint
                baseColumnNames="ID_RESTAURANTE"
                baseTableName="DIA_FINCIONAMENTO"
                constraintName="FK_DIA_FUNCIONAMENTO_RESTAURANTE"
                referencedColumnNames="ID" referencedTableName="RESTAURANTE"/>
    </changeSet>
    
</databaseChangeLog>
